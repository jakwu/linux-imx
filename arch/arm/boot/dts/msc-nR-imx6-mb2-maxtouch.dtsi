/ {
	soc {
		aips-bus@02100000 { /* AIPS2 */
			i2cmux {
				i2c2@1 {
					maXTouch {
						compatible = "atmel,mXT224";
						reg = <0x4a>;
						interrupt-parent = <&gpio1>;
						interrupts = <4 2>;
						numtouch = <10>;
						max-x = <4096>;
						max-y = <4096>;
						touch-gpio = <&gpio1 4 0>;
					};
				};
			};
		};
	};
};
